                    android:text="e"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_r"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="r"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_t"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="t"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_y"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="y"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_u"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="u"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_i"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="i"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_o"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="o"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_p"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="p"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_leftbracket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="["
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_rightbracket"
                    android:layout_width="0dp"

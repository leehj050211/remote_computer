                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="8"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="9"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="-"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_equal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="="
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_backspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="back\nspace"
                    android:textAllCaps="false"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_key_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="tab"
                    android:textAllCaps="false"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_key_q"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
                    android:insetBottom="2dp"
                    android:text="q"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_w"
                    android:layout_width="0dp"

                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_key_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetLeft="2dp"
                    android:insetTop="2dp"
                    android:insetRight="2dp"
